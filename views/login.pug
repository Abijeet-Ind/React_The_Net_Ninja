extends base

block content
    section.login-section
        .form-container
            .information-fillup-container
                h1.login-text(style='text-align: center;') Login
                .div.email
                    p.input-indication-text E-Mail
                    input(type='email' name='' id='email')
                .div.login-password
                    p.input-indication-text Password
                    input(type='password' name='' id='password')
                    .forget-psw
                        a(href='/forget-password' style='text-decoration: none; color: black;') Forget Password?
                .div.submit-button(style=' height: 10%;')
                    button(type='submit' id="submit-button" style='cursor: pointer;') submit
                .other-medias
                    hr(style='background: #12bd03; height: 2px; width: 35%;')
                    .social-medias-icons(style='transform: translateY(2rem);')
                        div
                            iframe(class="iframe" src='./svg_icons/twitter.svg' frameborder='0')
                        div
                            iframe(class="iframe" src='./svg_icons/facebook.svg' frameborder='0')
                        div
                            iframe(class="iframe" src='./svg_icons/instagram.svg' frameborder='0')
                        